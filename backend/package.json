{
  "name": "backend",
  "version": "0.0.0",
  "description": "Backend for BTES project",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "clean": "rimraf dist",
    "generate": "tsoa spec-and-routes",
    "compile": "tsc",
    "launch:dev": "ts-node src/server.ts",
    "launch:prod": "node dist/server.js",
    "build": "run-s clean generate compile",
    "serve:dev": "run-s generate launch:dev",
    "serve:prod": "run-s build launch:prod",
    "start:dev": "nodemon",
    "start:prod": "run-s serve:prod"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ping": "^1.4.0",
    "socket.io": "^2.3.0",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.8",
    "@types/socket.io": "^2.1.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
